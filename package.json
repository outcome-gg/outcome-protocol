{
  "name": "outcome-protocol",
  "type": "module",
  "version": "1.0.0",
  "description": "Outcome Protocol",
  "scripts": {
    "format:fix": "prettier --write .",
    "lint": "luacheck src spec",
    "test": "yarn format:fix && yarn test:unit && yarn test:integration",
    "test:unit": "rm -rf coverage && mkdir -p coverage && busted . && luacov",
    "test:coverage": "rm -rf -R coverage && mkdir -p coverage && for file in test/unit/*_spec.lua; do echo Running tests in $(basename \"$file\"); busted \"$file\" --coverage; done && luacov --reporter html && open coverage/luacov.report.html",
    "test:integration": "yarn && yarn test:deploy && mocha 'test/integration/**/*.js' --timeout 30000",
    "test:integration:marketFactory": "yarn && mocha 'test/integration/marketFactory*.js' --timeout 2400000",
    "test:integration:market": "yarn && mocha 'test/integration/market.integration.*.js' --timeout 90000",
    "test:integration:platformData": "yarn && mocha 'test/integration/platformData*.js' --timeout 30000",
    "test:integration:configurator": "yarn && mocha 'test/integration/configurator.*.js' --timeout 90000",
    "test:integration:market-configurator": "yarn && mocha 'test/integration/market-configurator.integration.*.js' --timeout 90000",
    "test:deploy": "scripts/deploy.sh test"
  },
  "keywords": [],
  "author": "",
  "dependencies": {
    "@permaweb/ao-loader": "^0.0.26",
    "@permaweb/aoconnect": "^0.0.51",
    "axios": "^1.7.2",
    "chai": "^4.3.10",
    "dotenv": "^16.4.5",
    "keccak256": "^1.0.6",
    "mocha": "^10.2.0",
    "path": "^0.12.7",
    "yargs": "^17.2.1"
  },
  "lint-staged": {
    "*.lua": [
      "stylua",
      "luacheck --config .luacheckrc"
    ],
    "*": [
      "prettier --write ."
    ]
  },
  "engines": {
    "node": ">=22"
  }
}
